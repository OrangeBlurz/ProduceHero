<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.producehero">

    <!-- Icon made by Smashicons from www.flaticon.com -->

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".views.SignatureActivity"
            android:parentActivityName=".views.OrderActivity"/>

        <activity android:name=".views.ModifyItemActivity"
            android:parentActivityName=".views.OrderActivity"/>

        <activity android:name=".views.OrderActivity"
            android:launchMode="singleTask"
            android:parentActivityName=".views.RoutePlanActivity"/>

        <activity android:name=".views.RoutePlanActivity"
            android:launchMode="singleTask"
            android:parentActivityName=".views.RoutesActivity"/>

        <activity android:name=".views.RoutesActivity"
            android:launchMode="singleTask"/>

        <activity
            android:name=".views.SignInActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>